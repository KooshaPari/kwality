{
  "name": "llm-validation-platform",
  "version": "1.0.0",
  "description": "Comprehensive LLM validation platform with TDD-like validation, auto-grading, and multi-interface support",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "build": "npm run lint && npm run typecheck && npm run test",
    "docker:build": "docker build -t llm-validation-platform .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "llm",
    "validation",
    "testing",
    "ai",
    "tdd",
    "auto-grading",
    "knowledge-graph",
    "api",
    "cli",
    "tui",
    "mcp"
  ],
  "author": "LLM Validation Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "neo4j-driver": "^5.15.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.2",
    "ws": "^8.14.2",
    "graphql": "^16.8.1",
    "apollo-server-express": "^3.12.1",
    "@apollo/server": "^4.9.5",
    "playwright": "^1.40.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "prom-client": "^15.0.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "express-validator": "^7.0.1",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
