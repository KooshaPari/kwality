    "cron": "^3.1.6",
    "sharp": "^0.33.1",
    "archiver": "^6.0.1",
    "csv-parser": "^3.0.0",
    "pdf-parse": "^1.1.1",
    "marked": "^11.0.1",
    "highlight.js": "^11.9.0",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.24.3",
    "@opentelemetry/api": "^1.7.0",
